Select concat(name,'(',upper(left(occupation,1)),')')
from occupations
order by name;

SELECT CONCAT('There are a total of ', COUNT(Occupation), ' ', LOWER(Occupation), 's.')
FROM occupations
GROUP BY Occupation
ORDER BY COUNT(Occupation) ASC,Occupation ASC;

